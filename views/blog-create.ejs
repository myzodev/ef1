<%- include('./includes/components/counter') %>

<section class="container">
    <div class="flag-pattern"></div>
</section>

<section class="container">
    <header class="mb-40 gap-16 flex items-center">
        <h2 class="lg:h1 shrink-0">Create new article</h2>
        <div class="w-full h-10 bg-primary-300"></div>
    </header>

    <form class="gap-8 flex flex-col" action="/blog/create" method="POST">
        <input type="text" placeholder="Title" name="title" />
        <input type="text" placeholder="Category" name="category" />
        <input type="text" placeholder="Image URL" name="image" />
        <textarea placeholder="Text" name="text" rows="8"></textarea>
        <button class="button button-base button-primary" type="submit">Create</button>
    </form>
</section>